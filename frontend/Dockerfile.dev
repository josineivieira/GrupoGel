# Development Dockerfile for Frontend
# Includes live reload with nodemon/react-scripts

FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy app source
COPY . .

# Set environment
ENV NODE_ENV=development
ENV CI=false

# Expose port
EXPOSE 3000

# Run React dev server with hot reload
CMD ["npm", "start"]
